# Google Maps Configuration
# Use "businesses near me" to get all types, or be specific like "restaurants" or "retail stores"
GOOGLE_MAPS_SEARCH_QUERY=businesses near me
GOOGLE_MAPS_LOCATION=Bangalore, India
GOOGLE_MAPS_SEARCH_RADIUS=10km
MAX_BUSINESSES_PER_RUN=100

# Scraping Configuration
SCRAPING_DELAY_MIN=3000
SCRAPING_DELAY_MAX=7000
HEADLESS_MODE=true

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your-sheet-id-here
GOOGLE_SHEETS_CREDENTIALS_PATH=./config/credentials.json

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here
EMAIL_FROM_NAME=Your Business Name
MAX_DAILY_EMAILS=50
EMAIL_SEND_HOUR=10

# Business Information
SERVICE_PRICE=15000
SERVICE_CURRENCY=INR
BUSINESS_PHONE=+91-XXXXXXXXXX
BUSINESS_ADDRESS=Your Address, City, State

# Database
DATABASE_PATH=./data/leads.db

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=7d

# Scheduling
ENABLE_AUTO_SCRAPING=true
ENABLE_AUTO_EMAILING=true
SCRAPING_CRON=0 2 * * *
EMAIL_CRON=0 10 * * *
SHEETS_SYNC_CRON=0 */6 * * *
